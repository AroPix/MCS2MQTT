<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="868dp"
        android:layout_height="798dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="417dp"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/kill_mcs_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:text="Kill Monsieur Cuisine App" />

            <Button
                android:id="@+id/start_mcs_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Monsieur Cuisine App" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="458dp"
            android:layout_height="273dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/open_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open Settings" />

            <Button
                android:id="@+id/open_factory_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open Factory Mode" />

            <Button
                android:id="@+id/open_lsposed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open LSPosed" />

            <Button
                android:id="@+id/open_magisk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open Magisk" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>